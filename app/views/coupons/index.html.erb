<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>




<p id="notice"><%= notice %></p>
<center>
  <h1>Listing Coupons</h1>
</center>

<div id="map" style='width: 100%; height: 300px;'></div>
</div>
<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @map_hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});


</script>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Price</th>

      <th>End time</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% counter = 1 %>

    <% @coupons.each do |coupon| %>
    <div class= "coupon_count"
    <tr>
      <div class="col-md-6">
    <% if coupon.expiration == true || coupon.end_time < Time.now %>
        <% coupon.expiration = true %>
        <% coupon.max_count = 0 %>
        <% coupon.save %>
    <% else  %>
      <td><img id="itemPics"<%= image_tag coupon.picture.url %></td>

      </div>

      <div class="col-md-6">
      <%= link_to coupon.title, coupon %>
    </td>

    <td><%= coupon.price %></td>
    <%= content_tag(:td, '', :class => "tim_#{counter}") %>



  </tr>
  <div id="count">
    <%= content_tag(:span, coupon.end_time.hour, :class => "hour_#{counter}") %>
    <%= content_tag(:span, coupon.end_time.min, :class => "min_#{counter}") %>
    <% counter += counter %>
  </div>
</div>

    <% end %>


    <% end %>
  </tbody>
</table>


<br>
