<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>




<p id="notice"><%= notice %></p>
<center>
<h1>Listing Coupons</h1>
</center>

 <div id="map" style='width: 100%; height: 300px;'></div>
</div>
<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
 markers = handler.addMarkers(<%=raw @map_hash.to_json %>);
 handler.bounds.extendWith(markers);
 handler.fitMapToBounds();
});


</script>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Price</th>

      <th>End time</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% hour = 1 %>
    <% min = 1 %>
    <% secs = 1 %>
    <% tim = 1 %>
    <% @coupons.each do |coupon| %>
    <div class= "coupon_count"
      <tr>
      <div class="col-md-6">
        <td><img id="itemPics"<%= image_tag coupon.picture.url %></td>
        <td>
      </div>
      <div class="col-md-6">
          <% if coupon.expiration == false %>
            <%= link_to coupon.title, coupon %>
          <% else %>
            <%= coupon.title %>
          <% end %>
        </td>

        <td><%= coupon.price %></td>
        <%= content_tag(:td, '', :class => "tim_#{tim}") %>
        <!-- <%= content_tag(:td,'' , :class => "tim") %> -->
        <td><% coupon.expiration %></td>

      </div>


      </tr>
    </div>
      <div class="count">
      <td class="hour">  <%= coupon.end_time.hour  %></td>
      <%= content_tag(:td, coupon.end_time.hour, :class => "hour_#{hour}") %>
      <%= content_tag(:td, coupon.end_time.min, :class => "min_#{min}") %>
      <% hour += hour %>
      <% min += min %>
      <% tim += tim %>
    </div>

    <% end %>
  </tbody>
</table>

