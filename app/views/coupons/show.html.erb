<%= link_to 'Back', coupons_path, class:"btn btn-primary" %>
<div class="text-center">
<h1><%= @coupon.restaurant.name %></h1>
<%= link_to 'Follow this Restaurant!', new_customer_path(:coupon_id => @coupon.id), class:"btn btn-primary"%>
</div>
<div class="col-xs-6 ">
  <div class="coupon-title">
    <h3><%= @coupon.title %></h3>
  </div>
  <div class="coupon-price"><h5><%= number_to_currency @coupon.price %></h5></div>
  <div><h5>Started at <%= @coupon.start_time.strftime("%l:%M %P") %></h5></div>
  <div><h5>Ends at<%= @coupon.end_time.strftime("%l:%M %P") %></h5></div>
  <!-- <p>
    <strong>Expiration:</strong>
    <%= @coupon.expiration %>
  </p> -->

  <p>Number of Remaining Coupons:
    <%= @coupon.max_count %>
  </p>
</div>

<div class="col-xs-6">
  <%= image_tag @coupon.picture.url(:medium) %></p>
  <%= image_tag @coupon.restaurant.logo %>
</div>



<p id="notice"><%= notice %></p>
<% if current_restaurant %>

<% else %>
<div class="field container claim-form">
  <%= form_for (@phone)  do |f| %>
      <%= f.label "Enter your phone number" %>
      <%= f.text_field :mobile, class:"form-control" %>

      <div class="text-center"><%= f.submit 'Claim this Coupon!', class:"btn-lg btn-danger" %>
      </div>
    </div>
  <% end %>
<% end %>



<% if current_restaurant %>
  <p>
    <strong>promocode:</strong>
    <%= @coupon.promocode %>
  </p>
<% else %>
<% end %>





<%= link_to 'Follow this Restaurant!', new_customer_path(:coupon_id => @coupon.id) %>|

<% if current_restaurant %>
  <%= link_to 'Edit', edit_coupon_path %>
<% else %>
<% end %>
