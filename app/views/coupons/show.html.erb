    <%= f.submit 'Claim this Coupon!' %>
    </div>
  <% end %>
<% end %>

<p>
  <strong>Coupon:</strong>
  <%= @coupon.title %>
</p>
<p><%= image_tag @coupon.picture.url(:medium) %></p>


